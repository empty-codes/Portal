    <script>

        var selectedcoursetable;
        $(document).ready(function () {
            selectedcoursetable = $("#selected-course-table").DataTable({
                "searching": false,
                "ordering": false,
                "paging": false,
                "lengthChange": false,
                "info": false,
                "ajax": {
                    "url": "/Course/GetSelectedCourses",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "CourseId" },
                    { "data": "CourseTitle" },
                    { "data": "CreditHours" },
