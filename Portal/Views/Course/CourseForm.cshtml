
@{
    ViewBag.Title = "Course Form";
    Layout = "~/Views/Course/CourseLayout.cshtml";
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseForm</title>
    <link href="~/Content/CourseFormCss.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/print.css" media="print">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>



<body>
    <div class="page">
        <div class="print" size="A4">
            <div class="container">
                <div class="student-details">
                    <p><a href="https://imgbb.com/"><img src="https://i.ibb.co/606z58j/logo.png" alt="logo" width="100" height="100" class="logo"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;2022/2023.2 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ESTHER UNIVERSITY<button class="print-button" onclick="window.print();return false;"><i class="fas fa-print fa-lg"></i></button></p>

                    <p class="heading">STUDENT COURSE FORM</p>

                    <p>Matric No: <span class="ans">@ViewBag.Student.MatricNo</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="name">@ViewBag.Student.FirstName.ToUpper() @ViewBag.Student.LastName.ToUpper()</span></p>

                    <p>Email: <span class="ans">@ViewBag.Student.Email</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Phone Number: <span class="ans">@ViewBag.Student.Phone</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sex: <span class="ans">@ViewBag.Student.Sex</span></p>

                    <p>Birth Date: <span class="ans">@ViewBag.Student.DateOfBirth</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Marital Status: <span class="ans">@ViewBag.Student.MaritalStatus</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Nationality: <span class="ans">@ViewBag.Student.Nationality.ToUpper()</span></p>

                    <p>Current Study Level: <span class="ans">@ViewBag.Student.StudyLevel</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Department: <span class="ans">@ViewBag.Student.Department.ToUpper()</span></p>

                    <p>Programme: <span class="ans">@ViewBag.Student.Programme.ToUpper()</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Degree: <span class="ans">BACHELOR OF SCIENCE</span></p>
                </div>


            </div>

            <div class="course-list container">
                <p class="slt">&nbsp;&nbsp;&nbsp;SELECTED COURSES</p>
                <table id="selected-course-table" class=" selected-courses-table">
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Title</th>
                            <th>Credit</th>
                            <th>Lecturer</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="student-fees container">
                <p>STUDENT FINANCIAL SUMMARY</p>
                <p>
                    Level:  <span class="ans"> @ViewBag.Student.StudyLevel</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    Fees:   <span class="ans">700,000</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    Payment Status:    <span class="ans">PAID</span>
                </p>
                <hr />
            </div>


            <div class="signatures container">
                <p class="lines">STUDENT SIGNATURE: ___________________________________________________</p>
                <p class="lines">COURSE ADVISOR: ______________________________________________________</p>
            </div>
        </div>
        

    </div>
    
</body>



