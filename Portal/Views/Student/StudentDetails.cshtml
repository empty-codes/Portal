@{
    ViewBag.Title = "Student Details";
    Layout = "~/Views/Course/CourseLayout.cshtml";
}

<style>
    #details {
        font-size: 16px;
        font-weight: bold;
        padding-right: 10px;
    }

    .table-header {
        background-color: black;
        color: white;
    }
</style>


<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>


<table class="table table-striped table-bordered">
    <thead class="table-header">
        <tr>
            <th colspan="2">Student Details</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Student Name</td>
            <td>@ViewBag.Student.FirstName @ViewBag.Student.LastName</td>
        </tr>
        <tr>
            <td>Matric Number</td>
            <td>@ViewBag.Student.MatricNo</td>
        </tr>
        <tr>
            <td>Study Level</td>
            <td>@ViewBag.Student.StudyLevel</td>
        </tr>
        <tr>
            <td>Department</td>
            <td>@ViewBag.Student.Department</td>
        </tr>
        <tr>
            <td>Programme</td>
            <td>@ViewBag.Student.Programme</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@ViewBag.Student.Email</td>
        </tr>
        <tr>
            <td>Phone Number</td>
            <td>@ViewBag.Student.Phone</td>
        </tr>
        <tr>
            <td>DOB</td>
            <td>@ViewBag.Student.DateOfBirth</td>
        </tr>
        <tr>
            <td>Sex</td>
            <td>@ViewBag.Student.Sex</td>
        </tr>
        <tr>
            <td>Marital Status</td>
            <td>@ViewBag.Student.MaritalStatus</td>
        </tr>
        <tr>
            <td>Nationality</td>
            <td>@ViewBag.Student.Nationality</td>
        </tr>
    </tbody>
</table>

